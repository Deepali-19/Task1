<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_top_gradient"
    tools:context=".WelcomeActivity">

    <!-- Dumbbell Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/dumbbell_gym_svgrepo_com"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true" />

    <!-- FITNESS CLUB Text -->
    <TextView
        android:id="@+id/clubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FITNESS CLUB"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@id/logo"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true" />

    <!-- Welcome Back -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_centerInParent="true" />

    <!-- Button Card -->
    <LinearLayout
        android:id="@+id/buttonCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="32dp"
        android:orientation="vertical"
        android:background="@drawable/white_rounded_bg"
        android:padding="24dp">

        <!-- SIGN IN Button -->
        <Button
            android:id="@+id/signInBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SIGN IN"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_gradient" />

        <!-- SIGN UP Button -->
        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SIGN UP"
            android:textColor="@color/gradient_start"
            android:background="@drawable/button_white_outline"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- Login with Social Media -->
    <TextView
        android:id="@+id/socialText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Social Media"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_below="@id/buttonCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <!-- Social Icons -->
    <LinearLayout
        android:id="@+id/socialIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/socialText"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icons8_instagram_100"
            android:layout_marginHorizontal="10dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icons8_facebook_100"
            android:layout_marginHorizontal="10dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icons8_x_100"
            android:layout_marginHorizontal="10dp" />
    </LinearLayout>

</RelativeLayout>